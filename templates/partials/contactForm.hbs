
<form action="/contactForm" method="POST">
    {{#if errors}}
        {{#each errors}}
            <p>{{this}}</p>
        {{/each}}
    {{/if}}
    <label for="email">Enter your email: </label>
    <input type="text" name="email" id="email" value="{{email}}" required>
    <label for="subject">Subject:</label>
    <input type="text" name="subject" id="subject" value="{{subject}}" required>
    <label for="message">Message:</label>
    <textarea name="message" id="message" cols="30" rows="10" spellcheck="true" value="{{message}}" required></textarea>
    <button type="submit">Send me a message!</button>
</form>